generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Candle {
  id         String   @id @default(cuid())
  nickname   String?
  message    String
  days       Int
  status     String   @default("pending") // pending|paid|hidden
  paymentRef String?
  startsAt   DateTime?
  endsAt     DateTime?
  createdAt  DateTime @default(now())

  Order      Order?
}

model Order {
  id         String   @id @default(cuid())
  candleId   String   @unique
  amountPLN  Int      // amount in grosz (PLN * 100)
  provider   String   // "stripe"
  providerId String?  // PaymentIntent id
  status     String   @default("created") // created|paid|failed
  createdAt  DateTime @default(now())

  Candle     Candle   @relation(fields: [candleId], references: [id])
}
